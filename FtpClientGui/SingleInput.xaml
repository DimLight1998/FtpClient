<Window x:Class="FtpClientGui.SingleInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FtpClientGui"
        mc:Ignorable="d"
        Title="SingleInput" Height="150" Width="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Label  Margin ="3" VerticalAlignment="Center" Grid.Row="0" Name="HintText" />
        <TextBox  Margin ="3" VerticalAlignment="Center" Grid.Row="1" Name="InputTextBox" />
        <Button  Margin ="3" VerticalAlignment="Center" Grid.Row="2" Name="SubmitButton" Click="SubmitButton_OnClick" Width="100">Submit</Button>
    </Grid>
</Window>